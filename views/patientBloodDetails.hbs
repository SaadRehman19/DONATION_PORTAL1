<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>details</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

</head>

<body>


  {{!-- patient details who submitted the form --}}
  <h2>PATIENT DETAILS :</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">BloodType</th>
        <th scope="col">Disease</th>
        <th scope="col">Contact No</th>
        <th scope="col">Hospital Name</th>
        <th scope="col">City</th>
        <th scope="col">zipcode</th>
      </tr>
    </thead>
    <tbody>
      {{#p_detail}}
      <tr>
        <td>{{patient_id}}</td>
        <td>{{patient_name}}</td>
        <td>{{email}}</td>
        <td>{{blood_type}}</td>
        <td>{{disease}}</td>
        <td>{{contact_no}}</td>
        <td>{{hosp_name}}</td>
        <td>{{city}}</td>
        <td>{{zipcode}}</td>
        <td><a  class="btn btn-primary" href="/DeleteBloodPatient/{{patient_id}}" role="button">Delete</a></td>
      <td><a  class="btn btn-primary" href="/UpdateBloodPatient/{{patient_id}}" role="button">Update</a></td>
      </tr>
    </tbody>
    {{/p_detail}}
  </table>

  <br>
  <br>
  <br>
  <br>

  {{!-- Details of a donor from database --}}
  <div class="container">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Donor Id</th>
          <th scope="col">Donor Name</th>
          <th scope="col">Email</th>
          <th scope="col">Contact No</th>
          <th scope="col">Age</th>
          <th scope="col">BloodType</th>
          <th scope="col">City</th>
          <th scope="col">Zip</th>
        </tr>
      </thead>
      <tbody>
        {{#d_list}}
        <tr>
          <td>{{donor_id}}</td>
          <td>{{donor_name}}</td>
          <td>{{email}}</td>
          <td>{{contact_no}}</td>
          <td>{{age}}</td>
          <td>{{blood_type}}</td>
          <td>{{city}}</td>
          <td>{{age}}</td>
        </tr>
        {{/d_list}}
      </tbody>
    </table>
  </div>

</body>

</html>